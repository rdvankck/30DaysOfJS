<%- include('partials/header.ejs') %>

<main class="container-fluid px-0">
    <!-- Header Section -->
    <section class="bg-gradient text-white py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h1 class="display-4 fw-bold mb-3">
                        <i class="bi bi-pen-fill me-3"></i>
                        Create New Post
                    </h1>
                    <p class="lead opacity-90">Share your thoughts and experiences with the world</p>
                </div>
            </div>
        </div>
    </section>

    <div class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg" style="border-radius: 1rem;">
                    <div class="card-header bg-transparent border-0 pt-4 pb-0">
                        <div class="d-flex align-items-center mb-3">
                            <div class="avatar bg-gradient rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="bi bi-pencil-square text-white"></i>
                            </div>
                            <div>
                                <h4 class="mb-0 fw-semibold">New Journal Entry</h4>
                                <small class="text-muted">Express your creativity</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <form action="/create" method="POST">
                            <div class="mb-4">
                                <label for="postTitle" class="form-label fw-semibold text-dark">
                                    <i class="bi bi-type me-2 text-primary"></i>
                                    Post Title
                                </label>
                                <input type="text" class="form-control form-control-lg border-2" id="postTitle" name="postTitle" 
                                       placeholder="Enter an engaging title for your post..." required
                                       style="border-radius: 0.75rem; padding: 1rem;">
                            </div>
                            
                            <div class="mb-4">
                                <label for="postContent" class="form-label fw-semibold text-dark">
                                    <i class="bi bi-chat-text me-2 text-primary"></i>
                                    Content
                                </label>
                                <textarea class="form-control border-2" id="postContent" name="postContent" rows="12" 
                                          placeholder="Share your story, thoughts, or experiences..." required
                                          style="border-radius: 0.75rem; padding: 1rem; resize: vertical;"></textarea>
                                <div class="form-text mt-2">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Express yourself freely - there's no word limit!
                                </div>
                            </div>
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <a href="/" class="btn btn-outline-secondary btn-lg w-100 rounded-pill">
                                        <i class="bi bi-arrow-left me-2"></i>
                                        Back to Home
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill" 
                                            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                        <i class="bi bi-send me-2"></i>
                                        Publish Post
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Writing Tips Card -->
                <div class="card border-0 shadow-sm mt-4" style="border-radius: 1rem;">
                    <div class="card-body p-4">
                        <h5 class="card-title text-primary mb-3">
                            <i class="bi bi-lightbulb me-2"></i>
                            Writing Tips
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        Make your title catchy and descriptive
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        Start with a compelling opening
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        Use paragraph breaks for readability
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        End with a thought-provoking conclusion
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer.ejs') %>